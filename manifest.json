{
    "manifest_version": 3,
    "name": "ThinkFirst",
    "version": "1.0",
    "description": "Helps you avoid overreliance on AI by encouraging critical thinking",
    "permissions": ["storage", "scripting", "tabs", "webNavigation"],
    "host_permissions": [
      "https://chat.openai.com/*",
      "https://chatgpt.com/*",
      "https://claude.ai/*",
      "https://gemini.google.com/*",
      "https://x.ai/*",
      "https://deepseek.ai/*",
      "https://copilot.microsoft.com/*",
      "https://api.openai.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "web_accessible_resources": [{
      "resources": ["chart.min.js"],
      "matches": ["<all_urls>"]
    }],
    "content_scripts": [
      {
        "matches": [
          "https://chat.openai.com/*",
          "https://chatgpt.com/*",
          "https://claude.ai/*",
          "https://gemini.google.com/*",
          "https://x.ai/*",
          "https://deepseek.ai/*",
          "https://copilot.microsoft.com/*"
        ],
        "js": ["chart.min.js", "content.js"],
        "css": ["content.css"]
      }
    ]
  }
  